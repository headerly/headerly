    "@types/node": "^24.8.1",
    "eslint": "^9.38.0",
    "eslint-plugin-better-tailwindcss": "^3.7.10",
    "lefthook": "^2.0.0",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.0"
  },
  "pnpm": {
    "overrides": {
      "vite": "catalog:"
    }
